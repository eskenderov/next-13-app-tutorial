// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  username    String  @unique @db.VarChar(255)
  email   String   @unique @db.VarChar(255)
  password String
  bio String?
  createdAt DateTime @default(now()) @db.Timestamp(6)
  cartId Cart?
}

model Category {
  id Int @id @default(autoincrement())
  title String @unique @db.VarChar(255)
  tab String @unique @db.VarChar(255)
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  title String @unique @db.VarChar(120)
  image String
  description String @db.VarChar(455)
  CategoryTab Category? @relation(fields: [categoryTab], references: [tab]) 
  categoryTab String
  price Int?
  count Int @default(0)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @updatedAt
  cartItems CartItem[]
}

model CartItem {
  id Int @id @default(autoincrement())
  quantity Int @default(0)
  cart Cart  @relation(fields: [cartId], references: [id])
  cartId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int @unique
}

model Cart {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  totalCoast Int @default(0)
  items CartItem[]
}